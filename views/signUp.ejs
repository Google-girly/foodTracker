<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign up Screen</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
  <form method="POST" action="/signUp">
    <section class="vh-100 gradient-custom">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
              <div class="card-body p-5 text-center mb-md-5 mt-md-4 pb-5">

                <div class="mb-md-5 mt-md-4 pb-5">
                  <h2 class="fw-bold mb-2 text-uppercase">Sign Up</h2>
                  <p class="text-white-50 mb-5">Create account below</p>

                  <div class="form-white mb-4">
                    <input type="text" name="firstName" placeholder="First Name" class="form-control form-control-lg" required />
                    <label class="form-label">First Name</label>
                  </div>

                  <div class="form-white mb-4">
                    <input type="text" name="lastName" placeholder="Last Name" class="form-control form-control-lg" required />
                    <label class="form-label text-center">Last Name</label>
                  </div>

                  <div class="form-white mb-4">
                    <input type="text" name="userName" placeholder="Username" class="form-control form-control-lg" required />
                    <label class="form-label text-center">Username</label>
                  </div>

                  <div class="form-white mb-4">
                    <input type="text" name="password" placeholder="Password" class="form-control form-control-lg" required />
                    <label class="form-label text-center">Password</label>
                  </div>

                  <div class="form-white mb-4">
                    <input type="text" name="age" placeholder="Age" class="form-control form-control-lg" required />
                    <label class="form-label text-center">Age</label>
                  </div>

                  <div class="form-white mb-4 d-flex justify-content-evenly">
                    <div>
                        <input type="radio" id="genderM" name="gender" value="M">
                        <label for="genderM">M</label>
                    </div>
                    <div>
                    <input type="radio" id="genderF" name="gender" value="F">
                    <label for="genderF">F</label>
                    </div>
                  </div>
                  Sex
                  <br>
                  <br>
                  <br>
                  <button class="btn btn-outline-light btn-lg px-4" type="submit">Create Account</button>

                  <!-- <div class="d-flex justify-content-center text-center mt-4 pt-1">
                    <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                    <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                    <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                  </div> -->
                </div>

                <div>
                  <p class="mb-0">Already have an account? <a href="/" class="text-white-50 fw-bold">Log in</a></p>
                </div>

                <% if (typeof(error) != "undefined") { %>
                  <%= error %>
                <% } %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </form>

  <br>

  <script src="/foodTracker/public/js/signUp.js"></script>
</body>
</html>
